<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpinnerDemo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择年级、学院、专业"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gradle_textview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="2.5dp"
            android:text="年级:"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner_grade"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:layout_toRightOf="@id/gradle_textview"
            android:entries="@array/GradeData"
            android:prompt="@string/grade"
            android:layout_marginTop="2.5dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/college_textview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="2.5dp"
            android:text="学院:"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner_college"
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:layout_toRightOf="@id/major_textview"
            android:layout_marginTop="2.5dp"
            android:prompt="@string/college"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/major_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业:"
            android:textSize="18dp"/>

        <Spinner
            android:id="@+id/spinner_major"
            android:layout_width="322dp"
            android:layout_height="64dp"
            android:layout_toEndOf="@id/spinner_college"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_GradleData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您选择年级为:  "
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_selectedGradleData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_CollegeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您选择学院为:  "
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_selectedCollegeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_MajorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您选择班级为:  "
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_selectedMajorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

